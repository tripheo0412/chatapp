<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:layout_marginTop="@dimen/mp_x_small"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvMess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/mp_normal"
        android:layout_marginRight="@dimen/mp_normal"
        android:background="@drawable/message_me_first"
        android:maxWidth="300dp"
        android:padding="@dimen/mp_small"
        android:textColor="@color/white"
        tools:text="lorem ipsum " />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tvMess"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/mp_normal"
        android:layout_marginEnd="@dimen/mp_normal"
        android:paddingRight="@dimen/mp_x_small"
        android:paddingEnd="@dimen/mp_x_small"
        android:paddingStart="@dimen/mp_x_small"
        android:paddingLeft="@dimen/mp_x_small"
        android:visibility="gone"
        android:textColor="@color/secondary_text"
        android:textSize="10sp"
        tools:text="12:34" />
</RelativeLayout>